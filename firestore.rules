rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Admin registry â€” read own doc only, no client writes
    match /admins/{adminId} {
      allow read: if request.auth != null && request.auth.uid == adminId;
      allow write: if false;
    }

    // User profiles
    match /users/{userId} {
      // Only the profile owner or an admin can read
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      // Only the owner can write (with field validation); admins can also write
      allow write: if request.auth != null && (
        (request.auth.uid == userId &&
          request.resource.data.keys().hasOnly(['email', 'realName', 'username', 'school', 'yearLevel', 'referralSource', 'joinedAt', 'pictureUrl']))
        || isAdmin()
      );

      // Exam history subcollection
      match /exam_history/{historyId} {
        // Owner or admin can read history
        allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
        // Only the owner can create new entries (append-only: no update/delete)
        allow create: if request.auth != null && request.auth.uid == userId;
        allow update, delete: if false;
      }
    }

    // Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
